<% if flash[:error] %>
  <p class="error"><%= flash[:error] %></p>
<% end %>

<%= image_tag("/images/Logo.jpg") %>

<div id="user-status">
  <% if logged_in %>
    <%= link_to "Your requests", user_url(user_id) %>
    /
    <%= link_to "Logout", logout_path %>
  <% else %>
    <%= link_to "Login/Signup", login_path %>
  <% end %>
</div>

<h2>The request list:</h2>

<% for req in @aggregate_requests %>
  <div class="request">

    <span class="count">
      <%=h req.count %>
      <% if req.count == 1 %>
        person </span> wants
      <% else %>
        people </span> want
      <% end %> 

    to see

    <span class="band"> <%=h req.band_name %> </span>

    play in

    <span class="place"> <%=h req.place %> </span>
  </div>
<% end %>
