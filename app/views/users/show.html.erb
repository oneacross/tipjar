<div>Hello <%=h @user.firstname %></div>

<div id="user-status">
  <%= link_to "View all requests", root_url %>
  /
  <%= link_to "Logout", logout_path %>
</div>

<%= form_for @request do |req| %>

  <div class="request">
    <span class="count"> I </span>
    would pay 
    <%= req.text_field :money, :size => 4 %> bucks
    to see
    <%= req.text_field :band_name, :value => '{this awesome band}' %>
    play in
    <%= req.text_field :place, :value => '{my location}' %>

    <%= submit_tag 'Make Request' %>
  </div>

<% end %>

<br />

<% for req in @user.requests %>
  <div class="request">
    <span class="count"> You </span>
    would pay
    <span class="money"> <%= req.money %> bucks </span>
    to see
    <span class="band"> <%= req.band_name %> </span>
    play in
    <span class="place"> <%= req.place %> </span>
  </div>
<% end %>
