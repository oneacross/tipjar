source 'http://rubygems.org'

gem 'rails', '3.1.0'

gem 'sqlite3'

gem 'json'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', "  ~> 3.1.0"
  gem 'coffee-rails', "~> 3.1.0"
  gem 'uglifier'
end

gem 'jquery-rails'

gem 'ruby-openid'

group :test, :development do
    gem 'rspec'
    gem 'rspec-rails'
    gem 'webrat'
    gem 'database_cleaner'
    gem 'cucumber'
    gem 'cucumber-rails'
end

group :production do
    # Required by Heroku
    gem 'pg'
end

